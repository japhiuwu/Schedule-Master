---
    import FeatureCard from "../FeatureCard.astro"
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <section class="bg-white dark:bg-gray-900">
        <div class="container px-6 py-10 mx-auto">
            <h1 class="text-2xl font-semibold text-center text-gray-800 capitalize lg:text-3xl dark:text-gray-400">Revisa Nuestras <br> Asombrosas <span class="text-blue-500">Funcionalidades</span></h1>
    
            <div class="grid grid-cols-1 gap-8 mt-8 xl:mt-12 xl:gap-16 md:grid-cols-2 xl:grid-cols-3">
                
                <FeatureCard titulo="Horarios  Optimizados" descripcion="Asignación automática de secciones, docentes y aulas para cada clase del pensum académico.">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                    </svg>
                </FeatureCard>

                <FeatureCard titulo="Ahorra Tiempo" descripcion="Optimización de los horarios de los estudiantes y disminución de su carga académica.">
                    <i class="fa-solid fa-business-time"></i>
                </FeatureCard>

                <FeatureCard titulo="Simple" descripcion="Planificación de los horarios de una manera fácil y ordenada.">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                    </svg>
                </FeatureCard>

                <FeatureCard titulo="Base de Datos" descripcion="Información sobre la base de datos que almacena la información relevante de clases, docentes y aulas">
                    <i class="fa-solid fa-database"></i>
                </FeatureCard>
                
    


            </div>
        </div>
    </section>
</body>
</html>