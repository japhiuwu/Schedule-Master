---
interface Props {
  style: string;
  active: string;
}
const { style } = Astro.props;
declare const active: string;
---
<!-- component -->
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .small-logo {
      width: 50px;
      height: auto;
    }
    #banner {
      filter: brightness(0.5);
    }
  </style>
</head>
<body>
<div>
  <header class="w-dvw absolute top-0 left-1/2 -translate-x-1/2 z-[1000] py-4" {style}>
    <div class="max-w-[120rem] text-gray-50 px-6 md:px-8 lg:px-10">
      <nav class="w-full flex flex-row items-center font-sans">
        <a class="text-gray-50" href="/">
          <img src="../../public/img/logo.svg" alt="ScheduleMaster Logo" class="small-logo">
        </a>
        <div class="flex-1 relative hidden md:flex items-center justify-center">
          <ul class="mx-auto inline-flex gap-6 text-sm font-light">
            <li>
              <a class="" href="/" id="inicio" data-active="inicio">Inicio</a>
            </li>
            <li>
              <a href="./about-us" id="who" data-active="who">¿Quiénes Somos?</a>
            </li>
            <li>
              <a href="./contact-us" id="contact" data-active="contact">Contáctanos</a>
            </li>
          </ul>
          <ul class="absolute right-0">
            <li class="relative">
              <a class="h-8 rounded-lg flex items-center justify-center text-base bg-accent-500 leading-none px-5" href="./sign-in">Inicia Sesión!</a>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </header>
</div>
